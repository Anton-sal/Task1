public with sharing class PictureController {
    @AuraEnabled
    public static List<Document> getImages() {
        
    List<Document> documents = [SELECT Name, Id FROM Document WHERE Folder.Name like 'Pictures'];  
    
        for (Document doc:documents) {
            String oldName = doc.Name;
            doc.Name = oldName.substringBefore('.');
        }
    return documents;
    }
    
    @AuraEnabled
    public static Document insertImages(Document newdoc) {
            
        insert newdoc;
        return newdoc;
    }

}